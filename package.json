{
  "name": "zefy-backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -A run build",
    "lint": "yarn workspaces run lint",
    "start": "yarn workspaces foreach -A run start",
    "seed:services": "npx ts-node scripts/seed-services.ts",
    "seed:hub": "npx ts-node scripts/seed-bengaluru-hub.ts",
    "seed:all": "yarn run seed:services && yarn run seed:hub",
    "dev:infra": "docker compose up mongo redis rabbitmq -d",
    "stop:infra": "docker compose down",
    "clean": "docker system prune -f && yarn workspaces foreach run clean",
    "dev:user": "yarn workspace @zf/user-service dev",
    "dev:gateway": "yarn workspace @zf/gateway dev",
    "dev:partner": "yarn workspace @zf/partner-service dev",
    "dev:booking": "yarn workspace @zf/booking-service dev",
    "dev:admin": "yarn workspace @zf/admin-service dev",
    "dev:services": "concurrently -n \"USER,GATEWAY,PARTNER,BOOKING,ADMIN\" -c \"blue,green,yellow,magenta,cyan\" \"yarn dev:user\" \"sleep 2 && yarn dev:gateway\" \"sleep 2 && yarn dev:partner\" \"sleep 2 && yarn dev:booking\" \"sleep 2 && yarn dev:admin\"",
    "dev": "yarn dev:services"
  },
  "packageManager": "yarn@4.9.2",
  "devDependencies": {
    "@types/node": "^24.1.0",
    "concurrently": "^9.2.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
